{
  "name": "click-battle-next",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev | yarn emulators",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "emulators": "firebase emulators:start --import=./backups --only database,auth,firestore ",
    "lint:es": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "lint:quiet": "next lint --quiet src",
    "check:tsc": "tsc --noEmit -p . --pretty",
    "export": "yarn build && next export",
    "clear-all": "rm -rf .next _static node_modules",
    "re-start": "rm -rf .next _static node_modules && yarn install && yarn dev",
    "re-build": "rm -rf .next _static node_modules && yarn install && yarn build",
    "export-firestore": "gsutil -m rm -r gs://click-battle-mp.appspot.com/backups && gcloud firestore export gs://click-battle-mp.appspot.com/backups",
    "copy-bucket-data": "gsutil -m cp -r gs://click-battle-mp.appspot.com/backups ."
  },
  "dependencies": {
    "@fortawesome/fontawesome-common-types": "^6.5.1",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@next/bundle-analyzer": "^13.0.2",
    "@sentry/nextjs": "^7.106.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "bootstrap": "^5.3.2",
    "firebase": "^9.5.0",
    "firebase-admin": "^12.0.0",
    "framer-motion": "^7.2.0",
    "fs": "^0.0.1-security",
    "lottie-web": "^5.8.1",
    "next": "^14.1.3",
    "nodemailer": "^6.9.12",
    "react": "^18.2.0",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-flip-move": "^3.0.4",
    "react-flip-toolkit": "^7.0.14",
    "react-rating-stars-component": "^2.2.0",
    "react-router-dom": "^6.0.2",
    "react-scripts": "^5.0.1",
    "recharts": "^2.12.3",
    "sass": "^1.43.5",
    "sass-loader": "^12.3.0",
    "sweetalert2": "^11.10.6",
    "sweetalert2-react-content": "^5.0.3",
    "web-vitals": "^2.1.2",
    "webpack": "^5.64.4"
  },
  "devDependencies": {
    "@types/node": "16.11.10",
    "@types/nodemailer": "^6.4.13",
    "@types/react": "17.0.37",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.0.3",
    "typescript": "4.5.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
